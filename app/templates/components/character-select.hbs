<h3>Signup</h3>
<form class="form">
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="character">Character</label>
        {{view "select" id="character"
                        class="form-control"
                        content=characters
                        selection=character
                        optionValuePath="content.id"
                        optionLabelPath="content.label"}}
        {{input class="form-control" placeholder="Note" value=note}}

        {{#each box in roleCheckboxes}}
          <div class="checkbox">
            <label>
              {{input id=slug type="checkbox" checked=box.checked name=box.name}}
              {{box.name}}
            </label>
          </div>
        {{/each}}
      </div>
      <button class="btn btn-primary" {{action 'signup'}}>Sign Up</button>
    </div>
  </div>
</form>
