{{#link-to 'raids.new' class="btn btn-primary"}}<i class="fa fa-plus"></i> New Raid{{/link-to}}

<table class="table">
  <thead>
    <tr>
      <th>Guild</th>
      <th>Title</th>
      <th>Date</th>
      <th>You</th>
      <th>Signups</th>
    </tr>
  </thead>
  <tbody>
    {{#each raid in controller}}
      <tr>
        <td>
          {{#if raid.guild}}
            {{#if raid.guild.icon}}
              <div class="emblem">
                <div class="background" {{bind-attr style="raid.guild.backgroundStyle"}}>
                  <div class="icon" {{bind-attr style="raid.guild.iconStyle"}}>
                  </div>
                </div>
              </div>
            {{/if}}
            {{raid.guild.name}}<br/><small>{{raid.guild.realm}}</small>
          {{/if}}
        </td>
        <td>
          {{#if raid.admin}}
            <i class="fa fa-legal fa-fw"></i>&nbsp;
          {{/if}}
          {{#link-to 'raid' raid.id data-content=raid.note data-toggle="popover"}}{{raid.name}}{{/link-to}}
        </td>
        <td><i class="fa fa-calendar"></i> {{raid.dateCalendar}}<br/><small>{{raid.dateAgo}}</small></td>
        <td>
          {{#if raid.currentAccountSeated}}
            <strong class="text-success">Seated on {{raid.currentAccountSeated.character.name}}</strong>
          {{else}}
            {{#if raid.currentAccountSignedUp}}
              <strong class="text-info">Signed Up</strong>
            {{else}}
              <strong class="text-danger">Not Signed Up!</strong>
            {{/if}}
          {{/if}}<br/>
          <small>
            {{#if raid.hidden}}
              {{#if raid.finalized}}
                <i class="fa fa-lock fa-fw"></i> Finalized
              {{else}}
                <i class="fa fa-unlock fa-fw"></i> Not Finalized
              {{/if}}
            {{/if}}
          </small>
        </td>
        <td>
          <span title="Accounts signed up">{{raid.accountSignups}} <i class="fa fa-users fa-fw"></i></span>&nbsp;&nbsp;&nbsp;
          <span title="Accounts on the waiting list">{{raid.accountWaitingList}} <i class="fa fa-bars fa-fw"></i></span>&nbsp;&nbsp;&nbsp;
          <span title="Seated accounts">{{raid.accountSeated}} <i class="fa fa-check fa-fw"></i></span>&nbsp;&nbsp;&nbsp;
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
