<ul class="auth">
  <li>{{#link-to 'index'}}<i class="fa fa-home"></i> Home{{/link-to}}</li>
  {{#if loggedIn}}
    <li>{{#link-to 'raids'}}<i class="fa fa-trophy"></i> Raids{{/link-to}}</li>
    <li>{{#link-to 'characters'}}<i class="fa fa-users"></i> Characters{{/link-to}}</li>
    <li><i class="fa fa-user"></i> {{account.battletag}}</li>
    <li>
      <button class="btn btn-sm btn-default" {{action 'logout'}}>
        <i class="fa fa-sign-out"></i> Logout
      </button>
    </li>
  {{else}}
    <li>
      <button class="btn btn-sm btn-primary" {{action 'login'}}>
        <i class="fa fa-sign-in"></i> Login
      </button>
    </li>
  {{/if}}
</ul>
